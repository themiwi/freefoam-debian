# Tell the user project where to find our headers and libraries
set(FOAM_INCLUDE_DIR "@FOAM_INCLUDE_DIR@")
set(FOAM_INCLUDE_DIRS "${FOAM_INCLUDE_DIR}")
set(FOAM_LIBRARY_DIRS "@FOAM_LIB_DIR@")

# Our library dependencies
include("@FOAM_CMAKECONFIG_DIR@/@PROJECT_NAME@LibraryDepends.cmake")

# Defines
set(FOAM_DEFINITIONS "@FOAM_COMPILE_DEFINITIONS@")

# USE file
set(FOAM_USE_FILE
  "@FOAM_CMAKECONFIG_DIR@/@PROJECT_NAME@Use.cmake"
  )

# wmake compatibility file
set(FOAM_COMPAT_FILE
  "@FOAM_CMAKECONFIG_DIR@/@PROJECT_NAME@WmakeCompatibility.cmake"
  )

# FOAMUtilities.cmake file
set(FOAM_UTILITIES_FILE
  "@FOAM_CMAKECONFIG_DIR@/@PROJECT_NAME@Utilities.cmake"
  )

# Whether we use frameworks on Mac OS X
set(FOAM_WITH_FRAMEWORKS @FOAM_BUILD_FRAMEWORKS@)

if(APPLE AND FOAM_WITH_FRAMEWORKS)
  set(FOAM_FRAMEWORK_DIR "@FOAM_FRAMEWORK_DIR@")
  list(APPEND FOAM_LIBRARY_DIRS "${FOAM_FRAMEWORK_DIR}")
endif()

# Helper variables to force linking
set(FOAM_FORCE_LINK_COMPRESSIBLE_RAS_MODELS
