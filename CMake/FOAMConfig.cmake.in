set(FOAM_FORCE_LINK_COMPRESSIBLE_LES_MODELS
  ${FOAM_INCLUDE_DIR}/compressibleLESModels/forceLink.C)
set(FOAM_FORCE_LINK_INCOMPRESSIBLE_RAS_MODELS
  ${FOAM_INCLUDE_DIR}/incompressibleRASModels/forceLink.C)
set(FOAM_FORCE_LINK_INCOMPRESSIBLE_LES_MODELS
  ${FOAM_INCLUDE_DIR}/incompressibleLESModels/forceLink.C)
set(FOAM_FORCE_LINK_GENERIC_PATCH_FIELDS
  ${FOAM_INCLUDE_DIR}/genericPatchFields/forceLink.C)
set(FOAM_FORCE_LINK_RADIATION
  ${FOAM_INCLUDE_DIR}/radiation/forceLink.C)
set(FOAM_FORCE_LINK_COAL_COMBUSTION
  ${FOAM_INCLUDE_DIR}/coalCombustion/forceLink.C)
set(FOAM_FORCE_LINK_INTERFACE_PROPERTIES
  ${FOAM_INCLUDE_DIR}/interfaceProperties/forceLink.C)

