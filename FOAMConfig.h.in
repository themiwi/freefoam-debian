#ifndef FOAMConfig_H
#define FOAMConfig_H

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// define if your C-library provides __malloc_hook (commonly GNU C)
#cmakedefine FOAM_HAVE_MALLOC_HOOK
// define if you have fenv.h
#cmakedefine FOAM_HAVE_FENV_H
// define if you have feenableexcept (usually Linux only)
#cmakedefine FOAM_HAVE_FEENABLEEXCEPT
// define if you have sigfpe.h (commonly IRIX)
#cmakedefine FOAM_HAVE_SIGFPE_H
// define if you have FOAM_HAVE_HANDLE_SIGFPES (commonly IRIX)
#cmakedefine FOAM_HAVE_HANDLE_SIGFPES

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#endif

